{
  "displayName": "Homebridge SensorPush",
  "name": "homebridge-sensorpush",
  "version": "1.0.2",
  "description": "A Homebridge plugin for SensorPush temperature and humidity sensors",
  "license": "Apache-2.0",
  "author": "Marwan Alamat",
  "homepage": "https://github.com/marwan175/SensorPushHomebridge#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marwan175/SensorPushHomebridge.git"
  },
  "bugs": {
    "url": "https://github.com/marwan175/SensorPushHomebridge/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "homebridge": ">=1.6.0"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "config.schema.json"
  ],
  "scripts": {
    "lint": "eslint src/index.ts src/platform.ts src/platformAccessory.ts src/sensorPushApi.ts src/settings.ts --max-warnings=0",
    "watch": "npm run build && npm link && nodemon",
    "build": "rimraf ./dist && tsc",
    "test": "npm run build && node dist/test-plugin.js",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "keywords": [
    "homebridge-plugin",
    "sensorpush",
    "temperature",
    "humidity",
    "sensor"
  ],
  "dependencies": {
    "axios": "^1.6.0",
    "node-persist": "^3.1.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-persist": "^3.1.8",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "homebridge": "^1.7.0",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "typescript": "~5.3.3"
  }
}
