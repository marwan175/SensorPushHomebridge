{
  "pluginAlias": "SensorPush",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "SensorPush"
      },
      "email": {
        "title": "Email",
        "type": "string",
        "format": "email",
        "description": "Your SensorPush account email address"
      },
      "password": {
        "title": "Password",
        "type": "string",
        "description": "Your SensorPush account password"
      },
      "pollingInterval": {
        "title": "Polling Interval (milliseconds)",
        "type": "integer",
        "default": 60000,
        "minimum": 60000,
        "description": "How often to poll for sensor data (minimum 60000ms due to API rate limits)"
      }
    },
    "required": ["name", "email", "password"]
  },
  "layout": [
    {
      "type": "flex",
      "flex-flow": "row wrap",
      "items": [
        "name"
      ]
    },
    {
      "type": "fieldset",
      "title": "SensorPush Account",
      "description": "Enter your SensorPush Gateway Cloud credentials",
      "expandable": false,
      "items": [
        "email",
        "password"
      ]
    },
    {
      "type": "fieldset",
      "title": "Advanced Settings",
      "expandable": true,
      "expanded": false,
      "items": [
        "pollingInterval"
      ]
    }
  ]
}
